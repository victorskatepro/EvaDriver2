<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.victorsaico.evadriver.SingUpActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:src="@color/colorPrimary"
        android:layout_width="100dp"
        android:layout_height="120dp"
        />
        <ImageView
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.victorsaico.evadriver.widgets.CustomEditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres y Apellidos"
            app:font="@string/din_pro"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:background="@null"
            android:textSize="13sp"/>
        <view
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@android:drawable/ic_input_add"
                />
            <com.victorsaico.evadriver.widgets.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                app:font="@string/din_pro"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:background="@null"
                android:textSize="13sp"/>
        </LinearLayout>
        <view
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@android:drawable/ic_input_add"
                />
            <com.victorsaico.evadriver.widgets.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Celular"
                app:font="@string/din_pro"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:background="@null"
                android:textSize="13sp"/>
        </LinearLayout>
        <view
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@android:drawable/ic_input_add"
                />
            <com.victorsaico.evadriver.widgets.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                app:font="@string/din_pro"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:background="@null"
                android:textSize="13sp"/>
        </LinearLayout>
        <view
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@android:drawable/ic_input_add"
                />
            <com.victorsaico.evadriver.widgets.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirmar Contraseña"
                app:font="@string/din_pro"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:background="@null"
                android:textSize="13sp"/>
        </LinearLayout>
        <view
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
        <com.victorsaico.evadriver.widgets.CustomButton
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_rounded_turq"
            android:textColor="@android:color/white"
            android:onClick="goCode"
            android:text="Registrar"
            app:font="@string/din_pro"/>
    </LinearLayout>
</ScrollView>
